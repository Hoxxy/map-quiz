<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BorderlessButtonRipple" parent="AppTheme">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
    </style>

    <style name="dlg_settings_authors_title" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="dlg_settings_authors_desc" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- Stil za opcije -->
    <style name="activity_settings_titles">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.5</item>
        <item name="android:textColor">#010000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Animacija za startGame dialog -->
    <style name="StartGameDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- Animacija za newLevel dialog -->
    <style name="NewLevelDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_top</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <!-- Animacija za endGame dialog -->
    <style name="EndGameDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_top</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <!-- Animacija za Settings dialog -->
    <style name="SettingsDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


    <style name="endgame_button" parent="@style/BorderlessButtonRipple">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

</resources>
